<div class="box">
    <div class="box-header">
        <h3 class="box-title">Reports:</h3>
    </div>
    <div class="box-body">
        <div class="row">
            <div class="col-sm-12">
                <table id="tb_reports">
                    <thead>
                        <tr>
                            <th>Report name</th>
                            <th>Last updated</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for file in files %}
                        <tr>
                            <td>
                                <a href="{{ constant('ADMIN_URL') }}?p=reports&file={{ file.name }}">{{ file.name }}</a>
                            </td>
                            <td>{{ file.mtime|date('Y-m-d H:i:s') }}</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                    <tfoot>
                    <tr>
                        <th>Report name</th>
                        <th>Last updated</th>
                    </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready(function () {
        $('#tb_reports').DataTable();

    });
</script>